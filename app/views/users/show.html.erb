<h1>Hi <%= @user.first_name %></h1>
<a href ="/shoes">Go To All Products</a>
<a href = "/users/log_out">Log Out</a>

<p>Sell Product</p>
<form action="/users/sell" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>Name<input type="text" name="product"></p>
	<p>Price<input type="text" name="price"></p>
	<input type="submit" value="Sell">
</form>

<h3>Your products that are not yet sold</h3>
<table>
	<th>
		<tr>
			<td>Product</td>
			<td>Date Posted</td>
			<td>Amount</td>
			<td>Action</td>
		</tr>
	</th>
	<% @user_shoes.each do |shoe| %>
	<tr>
		<td><%= shoe.product %></td>
		<td><%= shoe.created_at %></td>
		<td><%= shoe.price %></td>
		<td><form action="/users/<%= shoe.id %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Remove">
</form></td>
	</tr>
	<% end %>
</table>

<h3>Purchases</h3>
<table>
	<th>
		<tr>
			<td>Product</td>
			<td>Date Bought</td>
			<td>Seller</td>
			<td>Amount</td>
		</tr>
	</th>
	<% @user_purchases.each do |p| %>
	<tr>
		<td><%= p.shoe.product %></td>
		<td><%= p.created_at %></td>
		<td><%= p.shoe.user.first_name %> <%= p.shoe.user.last_name %></td>
		<td><%= p.amount %></td>
	</tr>
	<% end %>
</table>
<p>Total  $<%= @total_purchases%></p>
<br>
<br>
<h3>Sales</h3>
<table>
	<th>
		<tr>
			<td>Product</td>
			<td>Date Bought</td>
			<td>Buyer</td>
			<td>Amount</td>
		</tr>
	</th>
		<% @user_sales.each do |s| %>
		<tr>
			<td><%= s.product %></td>
			<td><%= s.sale.created_at %></td>
			<td><%= s.sale.user.first_name %> <%= s.sale.user.last_name %></td>
			<td><%= s.price %></td>
		</tr>
			
			<% end %>
	</table>

	<p>Total $<%= @total_sales%></p>




