<div class='background2' id="display_shoes">
<div class="container">
	<div class="row">
		<h1><%= @user.first_name %>, what would you like to buy today?</h1>
		<a class="col-md-offset-10" href ="/users/<%= @user.id %>">Go To Dashboard</a>&nbsp&nbsp&nbsp&nbsp&nbsp<a href = "/users/log_out">Log Out</a>
	</div>
	<div class="top_table">
		<table class="table" id="all_shoes">
			<thead>
				<tr>
					<th>Shoe</th>
					<th>Seller</th>
					<th>Date Posted</th>
					<th>Amount</th>
					<th>Action</th>
				</tr>
			</thead>
			<% @shoes.each do |s| %>
			<tr>
				<td><%= s.product %></td>
				<td><%= s.first_name %> <%= s.last_name %></td>
				<td><%= s.created_at.strftime("%b %d, %Y") %></td>
				<td><%= number_to_currency(s.price) %></td>
				<td><form action="/users/<%= s.id %>/buy" method="post" role="form">
						<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
						<input type="hidden" name="_method" value="delete">
						<button type="submit" class="btn btn-default">Buy</button>
					</form></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
</div>